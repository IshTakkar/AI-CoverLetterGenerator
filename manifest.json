{
  "manifest_version": 3,
  "name": "AI-CoverLetterGenerator",
  "author": "Ish Takkar",
  "version": "1.0",
  "description": "Generate a cover letter from job descriptions on the current page",
  "permissions": ["activeTab", "storage", "scripting"],
  "optional_host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
